<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15.7dp"
            android:paddingBottom="13.7dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19.3sp"
                android:textColor="#020202"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanumsquare_otfb"
                android:text="정렬 및 필터"/>

            <TextView
                android:id="@+id/completeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.3sp"
                android:textColor="#545454"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/nanumsquare_otfb"
                android:layout_alignParentRight="true"
                android:text="완료" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#cbd3d2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.7sp"
            android:fontFamily="@font/nanumsquare_otfb"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="15dp"
            android:textColor="#020202"
            android:text="정렬" />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            segmentedgroup:sc_tint_color="#52c7be"
            segmentedgroup:sc_checked_text_color="@color/white"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="2.3dp"
            android:layout_marginRight="2.7dp"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="1dp"
            >
            <RadioButton
                android:id="@+id/titleRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:text="제목 순"
                android:layout_weight="1"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/popularityRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:text="인기순"
                android:layout_weight="1"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/recentModifyRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:text="최근 수정 순"
                android:layout_weight="1"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/registerRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:text="등록 순"
                android:layout_weight="1"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="#020202"
                android:layout_marginLeft="15.7dp"
                android:layout_marginTop="21.7dp"
                android:layout_marginBottom="10.3dp"
                android:text="분류" />
        </RelativeLayout>
        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            segmentedgroup:sc_tint_color="#52c7be"
            android:layout_marginLeft="2.3dp"
            android:layout_marginRight="2.7dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="1dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/travelRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="관광지"/>
            <RadioButton
                android:id="@+id/cultureRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="문화시설"/>
            <RadioButton
                android:id="@+id/leisureRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="레포츠"/>
        </info.hoang8f.android.segmented.SegmentedGroup>
        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            segmentedgroup:sc_tint_color="#52c7be"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="6.7dp"
            android:layout_marginLeft="2.3dp"
            android:layout_marginRight="2.7dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="1dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/lodgmentRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="숙박"/>
            <RadioButton
                android:id="@+id/shoppingRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="쇼핑"/>
            <RadioButton
                android:id="@+id/foodRbtn"
                android:layout_width="0dp"
                android:layout_height="39.3dp"
                android:layout_weight="1"
                style="@style/RadioButton"
                android:text="음식점"/>
        </info.hoang8f.android.segmented.SegmentedGroup>
