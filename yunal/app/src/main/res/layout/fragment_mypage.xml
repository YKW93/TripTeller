<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#cbd3d2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95.3dp"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="54dp"
            android:layout_height="53.7dp"
            app:civ_border_color="@color/dark"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            android:src="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.7sp"
            android:layout_marginLeft="22.7dp"
            android:layout_toRightOf="@+id/profile"
            android:layout_centerVertical="true"
            android:fontFamily="@font/koreanah2_r"
            android:textColor="#000000"
            android:text="닉네임" />
        <ImageView
            android:layout_width="29.3dp"
            android:layout_height="29.3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25.3dp"
            android:src="@drawable/ic_setting_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116.3dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="9.3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="36.3dp"
                android:layout_height="33.7dp"
                android:layout_marginBottom="9.3dp"
                android:src="@drawable/myback_list_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#494949"
                android:layout_marginBottom="5.3dp"
                android:fontFamily="@font/koreanah2_r"
                android:text="내 다녀옴" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#494949"
                android:fontFamily="@font/koreanah3_r"
                android:text="0" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#cbd3d2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="36.3dp"
                android:layout_height="33.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/myreview_list_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#494949"
                android:layout_marginBottom="5.3dp"
                android:fontFamily="@font/koreanah2_r"
                android:text="내 작성 후기" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#494949"
                android:fontFamily="@font/koreanah3_r"
                android:text="0" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#cbd3d2"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="36.3dp"
                android:layout_height="33.7dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/mymark_list_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#494949"
                android:layout_marginBottom="5.3dp"
                android:fontFamily="@font/koreanah2_r"
                android:text="내 찜 목록" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#494949"
                android:fontFamily="@font/koreanah3_r"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>