<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="@color/dark"
                android:layout_centerVertical="true"
                app:civ_border_width="1dp"
                android:src="#fff"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_profile"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.8sp"
                    android:textColor="#4e7c72"
                    android:fontFamily="@font/koreanah2_r"
                    android:text="사용자이름" />
                <TextView
                    android:id="@+id/review_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8.3sp"
                    android:textColor="#7e8584"
                    android:text="1분 전" />
            </LinearLayout>
            <Button
                android:id="@+id/tourDetailBtn"
                android:layout_width="69.7dp"
                android:layout_height="23.3dp"
                android:textSize="9.7sp"
                android:fontFamily="@font/koreanah2_r"
                android:textColor="@color/white"
                android:background="@drawable/mark_click_background"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="여행지 상세보기" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginTop="15dp">
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/green"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <TextView
                    android:id="@+id/moreimageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/koreanah2_r"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="+2"/>
            </android.support.v7.widget.CardView>
            <ImageView
                android:id="@+id/review_image"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="330dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#7e8584"
            android:fontFamily="@font/koreanah1_r"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="20.3dp"
            android:text="후기내용" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44.3dp"
            android:gravity="right"
            android:paddingLeft="25dp"
            android:paddingRight="18dp"
            android:layout_marginBottom="9dp">
            <TextView
                android:id="@+id/like_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9.7sp"
                android:textColor="#8f9796"
                android:fontFamily="@font/koreanah2_r"
                android:layout_marginRight="9dp"
                android:text="좋아요 0개" />
            <TextView
                android:id="@+id/comment_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9.7sp"
                android:textColor="#8f9796"
                android:fontFamily="@font/koreanah2_r"
                android:text="댓글 0개" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#cbd3d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center">
            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="wrap_content"
                android:paddingTop="15.3dp"
                android:paddingBottom="21.3dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1">
                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/like_btn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@color/gray"
                    app:btn_color="@color/gray"
                    app:btn_fill_color="@color/green"
                    app:allow_random_color="false"
                    app:enable_flashing="true"
                    app:big_shine_color="@color/green"
                    app:click_animation_duration="200"
                    app:shine_animation_duration="1500"
                    app:shine_turn_angle="10"
                    app:small_shine_offset_angle="20"
                    app:small_shine_color="#2B8073"
                    android:layout_marginRight="10dp"
                    app:siShape="@raw/like"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#8b9493"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/koreanah2_r"
                    android:text="좋아요" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15.3dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="21.3dp"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25.7dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_review_bigblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#8b9493"
                    android:fontFamily="@font/koreanah2_r"
                    android:text="댓글달기" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#cbd3d2"/>
</LinearLayout>