<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="@color/dark"
                app:civ_border_width="1dp"
                android:src="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_profile"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.8sp"
                    android:textColor="#4e7c72"
                    android:fontFamily="@font/koreanah2_r"
                    android:text="사용자이름" />
                <TextView
                    android:id="@+id/review_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="8.7dp"
                    android:textColor="#7e8584"
                    android:fontFamily="@font/koreanah1_r"
                    android:text="후기내용" />
                <TextView
                    android:id="@+id/review_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8.3sp"
                    android:layout_marginTop="8.7dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="#7e8584"
                    android:text="1분 전" />
            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:background="#cbd3d2"/>
    </LinearLayout>

</LinearLayout>