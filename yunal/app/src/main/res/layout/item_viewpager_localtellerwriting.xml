<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:src="@color/gray"
                android:id="@+id/like_btn"
                app:btn_color="@color/gray"
                app:btn_fill_color="@color/green"
                app:allow_random_color="false"
                app:enable_flashing="false"
                app:big_shine_color="@color/green"
                app:click_animation_duration="200"
                app:shine_animation_duration="1500"
                app:shine_turn_angle="10"
                app:small_shine_offset_angle="20"
                app:small_shine_color="#2B8073"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                app:siShape="@raw/like"/>
            <TextView
                android:id="@+id/contentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용 구간"
                android:textSize="15sp"
                android:maxLines="3"
                android:textColor="@color/white"
                android:letterSpacing="0.27"
                android:fontFamily="@font/koreanah2_r"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentTV"
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/koreanah2_r"
                    android:layout_marginLeft="3dp"
                    android:letterSpacing="0.14"
                    android:layout_gravity="center"
                    android:text="32" />
            </LinearLayout>


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by teller 이름"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/koreanah1_r"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>