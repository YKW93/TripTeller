<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/info_cardview"
        android:layout_width="324dp"
        android:layout_centerHorizontal="true"
        android:layout_height="124dp"
        android:backgroundTint="#e6eeec"
        app:cardCornerRadius="1.7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="105.7dp"
                android:layout_height="97.7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                app:cardCornerRadius="2dp">
                <ImageView
                    android:id="@+id/map_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11.3dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/map_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_marginTop="23.3dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/koreanah2_r"
                    android:text="제목"/>
                <TextView
                    android:id="@+id/map_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map_title"
                    android:layout_marginTop="6.7dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/koreanah1_r"
                    android:textColor="#000000"
                    android:text="위치" />
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.3dp"
                    android:layout_below="@id/map_location">
                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/ratingbar"
                        android:theme="@style/Theme.Rating"
                        android:layout_width="50dp"
                        android:layout_height="10.3dp"
                        android:isIndicator="true" />
                    <TextView
                        android:id="@+id/ratingbarTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8.3sp"
                        android:fontFamily="@font/koreanah1_r"
                        android:layout_marginLeft="4dp"
                        android:textColor="#000000"
                        android:text="(5.0)" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/layout1">
                    <ImageView
                        android:layout_width="7.7dp"
                        android:layout_height="7dp"
                        android:background="@drawable/ic_mark_black"/>
                    <TextView
                        android:id="@+id/markTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8.3sp"
                        android:textColor="#566563"
                        android:letterSpacing="0.21"
                        android:fontFamily="@font/koreanah2_r"
                        android:layout_marginLeft="1.3dp"
                        android:gravity="center_horizontal"
                        android:text="찜 223" />
                    <ImageView
                        android:layout_width="7.7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="7.3dp"
                        android:background="@drawable/ic_review_black"/>
                    <TextView
                        android:id="@+id/reviewTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8.3sp"
                        android:textColor="#566563"
                        android:letterSpacing="0.21"
                        android:layout_marginLeft="1.7dp"
                        android:fontFamily="@font/koreanah2_r"
                        android:gravity="center_horizontal"
                        android:text="후기 32" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>